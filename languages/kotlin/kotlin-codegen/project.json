{
  "name": "kotlin-codegen",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "languages/kotlin/kotlin-codegen/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "unbuild",
        "cwd": "languages/kotlin/kotlin-codegen"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish",
        "cwd": "languages/kotlin/kotlin-codegen"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm eslint languages/kotlin/kotlin-codegen"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "inputs": [
        "{projectRoot}/src",
        "{workspaceRoot}/src/main/kotlin/ExampleClient.kt"
      ],
      "outputs": ["{workspaceRoot}/coverage/languages/kotlin/kotlin-codegen"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/languages/kotlin/kotlin-codegen"
      }
    },
    "show-test-results": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vite preview --outDir languages/kotlin/kotlin-codegen/.temp/test-results"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "languages/kotlin/kotlin-codegen"
      }
    }
  },
  "tags": []
}
