{
  "name": "test-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tests/test-server",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "arri dev",
        "cwd": "tests/server"
      }
    },
    "build-server": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.arri", "{projectRoot}/.output"],
      "options": {
        "command": "arri build",
        "cwd": "tests/server"
      },
      "cache": false
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["tests/server/**/*.ts"]
      }
    },

    "serve": {
      "dependsOn": ["build-server"],
      "executor": "nx:run-commands",
      "options": {
        "command": "node .output/server.mjs --host",
        "cwd": "tests/server"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "tests/server"
      }
    }
  }
}
