{
  "name": "schema-builder",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tooling/schema-builder/src",
  "projectType": "library",
  "targets": {
    "benchmark": {
      "inputs": ["default", "{projectRoot}/benchmark/src"],
      "outputs": ["{projectRoot}/benchmark/dist"],
      "executor": "nx:run-commands",
      "options": {
        "command": "jiti buildBenchmarks.ts && jiti benchmark/dist/_index.js",
        "cwd": "tooling/schema-builder"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "unbuild",
        "cwd": "tooling/schema-builder"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish",
        "cwd": "tooling/schema-builder"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/tooling/schema-builder"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/tooling/schema-builder",
        "watch": false
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "tooling/schema-builder"
      }
    }
  },
  "tags": []
}
