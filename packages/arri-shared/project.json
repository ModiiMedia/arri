{
    "name": "arri-shared",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/arri-shared/src",
    "projectType": "library",
    "targets": {
        "build": {
            "dependsOn": ["setup-package-json"],
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/dist/packages/arri-shared"],
            "options": {
                "command": "unbuild",
                "cwd": "packages/arri-shared"
            }
        },
        "setup-package-json": {
            "executor": "nx:run-commands",
            "outputs": [
                "{workspaceRoot}/dist/packages/arri-shared/package.json"
            ],
            "options": {
                "command": "jiti tools/scripts/setup-package-json.ts --project-dir packages/arri-shared --out-dir dist/packages/arri-shared"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npm publish",
                "cwd": "dist/packages/arri-shared"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/arri-shared/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{workspaceRoot}/coverage/packages/arri-shared"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/packages/arri-shared"
            }
        }
    },
    "tags": []
}
