{
  "name": "arri-codegen-rust",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/arri-codegen/rust/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "unbuild",
        "cwd": "packages/arri-codegen/rust"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish",
        "cwd": "packages/arri-codegen/rust"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/arri-codegen/rust/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "inputs": [
        "{workspaceRoot}/coverage/packages/arri-codegen/rust-reference/src",
        "{workspaceRoot}/coverage/packages/arri-codegen/rust/src"
      ],
      "outputs": ["{workspaceRoot}/coverage/packages/arri-codegen/rust"],
      "options": {
        "command": "vitest run --passWithNoTests --globals",
        "cwd": "packages/arri-codegen/rust"
      },
      "configurations": {
        "watch": {
          "command": "vitest watch --passWithNoTests --globals"
        }
      }
    }
  },
  "tags": []
}
