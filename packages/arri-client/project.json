{
    "name": "arri-client",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/arri-client/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": ["dist/packages/arri-client"],
            "options": {
                "command": "unbuild",
                "cwd": "packages/arri-client"
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs client {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/arri-client/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{workspaceRoot}/coverage/packages/arri-client"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/packages/arri-client"
            }
        }
    },
    "tags": []
}
