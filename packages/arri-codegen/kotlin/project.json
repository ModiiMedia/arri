{
  "name": "arri-codegen-kotlin",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/arri-codegen/kotlin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "unbuild",
        "cwd": "packages/arri-codegen/kotlin"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish",
        "cwd": "packages/arri-codegen/kotlin"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test-codegen": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/arri-codegen/kotlin"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/arri-codegen/kotlin"
      }
    },
    "test-reference": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew test --console=plain",
        "cwd": "packages/arri-codegen/kotlin/reference"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx test-codegen arri-codegen-kotlin",
          "nx test-reference arri-codegen-kotlin"
        ]
      }
    },
    "show-test-results": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vite preview --outDir packages/arri-codegen/kotlin/.temp/test-results"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/arri-codegen/kotlin"
      }
    }
  },
  "tags": []
}
