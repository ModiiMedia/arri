{
    "name": "test-server",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "tests/test-server",
    "targets": {
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "arri dev",
                "cwd": "tests/server"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "arri build --skipCodegen",
                "cwd": "tests/server"
            }
        },
        "serve": {
            "dependsOn": ["build"],
            "executor": "nx:run-commands",
            "options": {
                "command": "node .output/server --host",
                "cwd": "tests/server"
            }
        },
        "test": {
            "dependsOn": ["build"],
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx serve test-server",
                    "wait-port 127.0.0.1:2020/status -t 30000 && nx run-many -t integration-test && fuser -k 2020/tcp"
                ]
            }
        }
    }
}
