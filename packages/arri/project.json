{
    "name": "arri",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/arri/src",
    "projectType": "library",
    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "command": "jiti ./src/cli/index dev",
                "cwd": "packages/arri"
            }
        },
        "build": {
            "dependsOn": ["setup-package-json"],
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/dist/packages/arri"],
            "options": {
                "command": "unbuild",
                "cwd": "packages/arri"
            }
        },
        "setup-package-json": {
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/dist/packages/arri/package.json"],
            "options": {
                "command": "jiti tools/scripts/setup-package-json.ts --project-dir packages/arri --out-dir dist/packages/arri"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/arri/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{workspaceRoot}/coverage/packages/arri"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/packages/arri"
            }
        },
        "publish": {
            "dependsOn": ["build"],
            "executor": "nx:run-commands",
            "options": {
                "command": "npm publish",
                "cwd": "dist/packages/arri-client"
            }
        }
    },
    "tags": []
}
