{
    "name": "arri-codegen-kotlin",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/arri-codegen/kotlin/src",
    "projectType": "library",
    "implicitDependencies": ["arri-codegen-kotlin-reference"],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": ["{projectRoot}/dist"],
            "options": {
                "command": "unbuild",
                "cwd": "packages/arri-codegen/kotlin"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm publish",
                "cwd": "packages/arri-codegen/kotlin"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "vitest run packages/arri-codegen/kotlin --globals --passWithNoTests"
            },
            "configurations": {
                "watch": {
                    "command": "vitest dev packages/arri-codegen/kotlin --globals --passWithNoTests"
                }
            }
        },
        "typecheck": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc --noEmit",
                "cwd": "packages/arri-codegen/kotlin"
            }
        }
    },
    "tags": []
}
