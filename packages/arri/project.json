{
    "name": "arri",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "./packages/arri/src",
    "projectType": "library",
    "targets": {
        "build": {
            "dependsOn": ["setup-package-json"],
            "executor": "nx:run-commands",
            "options": {
                "command": "unbuild -c packages/arri/build.config.ts",
                "cwd": "packages/arri"
            }
        },
        "setup-package-json": {
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/dist/packages/arri/package.json"],
            "options": {
                "command": "jiti tools/scripts/setup-package-json.ts --project-dir packages/arri --out-dir dist/packages/arri"
            }
        },
        "build-tsc": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/arri",
                "main": "packages/arri/src/index.ts",
                "tsConfig": "packages/arri/tsconfig.lib.json",
                "assets": ["packages/arri/*.md"],
                "updateBuildableProjectDepsInPackageJson": true
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npm publish",
                "cwd": "dist/packages/arri"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/arri/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{workspaceRoot}/coverage/packages/arri"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/packages/arri"
            }
        }
    },
    "tags": []
}
