{
    "name": "client",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/client/src",
    "projectType": "library",
    "targets": {
        "build": {
            "dependsOn": ["setup-package-json"],
            "executor": "nx:run-commands",
            "outputs": ["dist/packages/client"],
            "options": {
                "command": "unbuild",
                "cwd": "packages/client"
            }
        },
        "setup-package-json": {
            "executor": "nx:run-commands",
            "outputs": ["dist/packages/client/package.json"],
            "options": {
                "command": "jiti tools/scripts/setup-package-json.ts --project-dir packages/client --out-dir dist/packages/client"
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs client {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/client/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{workspaceRoot}/coverage/packages/client"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/packages/client"
            }
        }
    },
    "tags": []
}
