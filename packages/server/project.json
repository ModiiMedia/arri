{
    "name": "server",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/server/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npx unbuild && mv ./dist/cli.mjs ./dist/cli.js",
                "cwd": "packages/server"
            }
        },
        "build-tsc": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/server",
                "main": "packages/server/src/index.ts",
                "tsConfig": "packages/server/tsconfig.lib.json",
                "assets": ["packages/server/*.md"]
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs server {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/server/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["coverage/packages/server"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/packages/server"
            }
        }
    },
    "tags": []
}
