{
    "name": "arri-codegen-kotlin",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/arri-codegen/kotlin/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": ["{projectRoot}/dist"],
            "options": {
                "command": "unbuild",
                "cwd": "packages/arri-codegen/kotlin"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm publish",
                "cwd": "packages/arri-codegen/kotlin"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/arri-codegen/kotlin/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": [
                "{workspaceRoot}/coverage/packages/arri-codegen/kotlin"
            ],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../../coverage/packages/arri-codegen/kotlin"
            }
        }
    },
    "tags": []
}
