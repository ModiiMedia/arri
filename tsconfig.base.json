{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "#arri": ["packages/arri/src/_index.ts"],
            "#arri/*": ["packages/arri/src/*"],
            "#arri-adapter-typebox": [
                "packages/arri-adapter-typebox/src/index.ts"
            ],
            "#arri-client": ["packages/arri-client/src/index.ts"],
            "#arri-codegen-utils": ["packages/arri-codegen-utils/src/index.ts"],
            "#arri-shared": ["packages/arri-shared/src/index.ts"],
            "#arri-validate": ["packages/arri-validate/src/index.ts"],
            "#json-schema-to-jtd": ["packages/json-schema-to-jtd/src/index.ts"]
        }
    }
}
