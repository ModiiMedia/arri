{
  "name": "eslint-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/eslint-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "unbuild",
        "cwd": "packages/eslint-plugin"
      }
    },
    "build-2": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc",
        "cwd": "packages/eslint-plugin"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish",
        "cwd": "packages/eslint-plugin"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/eslint-plugin/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/eslint-plugin"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/arri-validate",
        "watch": false
      },
      "configurations": {
        "watch": {
          "command": "vitest watch --passWithNoTests --globals"
        }
      }
    }
  },
  "tags": []
}
